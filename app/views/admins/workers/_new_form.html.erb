<%= form_for @worker, :as => :worker, :url => admins_workers_path, :method => :post, :remote => true, :validate => true,
             :html => {:class => "well-form"} do |f| %>
    <%= f.label :name, "姓名", :class => "control-label" %>
    <%= f.text_field :name, :class => "input-medium" %>
    <%= f.label :group_id, "工作班组", :class => "control-label" %>
    <div class="chosen">
      <%= collection_select(:worker, :group_id, Group.all, :id, :name,
                            {:class => "chzn-container chzn-container-single", :id => "chzn-group-select",
                             :'data-placeholder' => "请选择班组...", :name => "group_id"}) %>
    </div>

    <div id="password-group">
      <%= f.label :password, "密码", :class => "control-label" %>
      <%= f.password_field :password, :class => "input-medium" %>
    </div>
    <div id="password-confirmation-group">
      <%= f.label :password_confirmation, "确认密码", :class => "control-label" %>
      <%= f.password_field :password_confirmation, :class => "input-medium" %>
    </div>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "确定", class: "btn" %>
        <%= link_to "取消", "#", class: "btn cancle" %>
      </div>
    </div>

<% end %>