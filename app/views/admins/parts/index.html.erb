<% provide(:title, '定期工作管理|安全部件管理') %>

<div class="content span9">
  <h4>安全部件管理</h4>

  <div class="row">
    <div class="span9" id="alert-info">
      <div id="alert-success"></div>
    </div>
  </div>
  <div class="row">
    <div class="span6">
      <table id="parts" class="table table-bordered" cellpadding="0" cellspacing="0"
             border="0" data-source="<%= admins_parts_url(format: "json") %>">
        <thead>
        <tr class="alert alert-success">
          <th style="width: 130px">名称</th>
          <th style="width: 130px">型号</th>
          <th style="">额定里程</th>
          <th>额定寿命</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
    <div class="left-form span3">
      <div class="row">
        <div class="span1">
          <p><%= link_to "新增", new_admins_part_path, class: "btn add-btn", id: "new_admins_part", remote: true %></p>

          <p><%= link_to "修改", '#', class: "btn edit-btn", id: "edit_admins_part", remote: true %></p>

          <p><%= link_to "删除", '#', class: "btn remove-btn", id: "delete_admins_part",
                 :confirm => "确定要删除这辆车吗？", :method=>:delete, remote: true %></p>
        </div>
        <div class="span2" id="form-wapper">

        </div>
      </div>
    </div>
  </div>
</div>
