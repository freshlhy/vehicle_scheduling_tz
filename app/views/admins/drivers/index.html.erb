<% provide(:title, '司机管理') %>

<div class="content span9">
  <h4>司机管理</h4>

  <div class="row">
    <div class="span9" id="alert-info">
      <div id="alert-success"></div>
    </div>
  </div>
  <div class="row">
    <div class="span6">
      <table id="drivers" class="table table-bordered" cellpadding="0" cellspacing="0"
             border="0" data-source="<%= admins_drivers_url(format: "json") %>">
        <thead>
        <tr class="alert alert-success">
          <th>姓名</th>
          <th>联系电话</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
    <div class="left-form span3">
      <div class="row">
        <div class="span1">
          <p><%= link_to "新增", new_admins_driver_path, class: "btn add-btn", id: "new_admins_driver", remote: true %></p>

          <p><%= link_to "修改", '#', class: "btn edit-btn", id: "edit_admins_driver", remote: true %></p>

          <p><%= link_to "删除", '#', class: "btn remove-btn", id: "delete_admins_driver",
                 :confirm => "确定要删除这个司机吗？", :method=>:delete, remote: true %></p>
        </div>
        <div class="span2" id="form-wapper">

        </div>
      </div>
    </div>
  </div>
</div>
