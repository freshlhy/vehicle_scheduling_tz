<%= form_for @group, :as => :group, :url => admins_group_path(@group), :method => :put, :remote => true, :validate => true,
             :html => {:class => "well-form"} do |f| %>
    <%= f.label :name, "班组名称", :class=>"control-label" %>
    <%= f.text_field :name, :class=>"input-medium" %>

    <div class="control-group">
      <div class="controls">
        <%= f.submit "确定", class: "btn"%>
        <%= link_to "取消", "#", class: "btn cancle" %>
      </div>
    </div>
<% end %>