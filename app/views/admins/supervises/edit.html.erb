<% provide(:title, '定期工作管理|添加车辆维护') %>

<div class="content span9">
  <div class="row">
    <div class="span9">
      <h4>定期工作管理</h4>
    </div>
  </div>
  <div class="row">
    <div class="span1">
      <a href="/admins/supervises" class="btn btn-mini">«返回</a>
    </div>
    <div id="title" class="span8">更新部件监督记录</div>
  </div>
  <div class="row">
    <div class="span9">
      <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="span9">
      <%= form_for @supervise, :as => :supervise, :url =>  admins_supervise_path(@supervise), :method => :put,
                   :html => {:class => "form-horizontal"} do |f| %>

          <%= render 'shared/error_messages' , object: f.object %>

          <div class="control-group">
            <label class="control-label" for="chzn-muti-part-select">监督部件</label>

            <div class="controls">
              <div class="chosen">
                <select data-placeholder="请选择监督部件..." class="chzn-select" multiple
                        id="chzn-muti-part-select" name="part_id" tabindex="40" disabled="true">
                  <option value=""></option>
                      <option value="<%= @supervise.part.id %>"
                             selected="selected"
                          ><%= @supervise.part.name_model %>
                      </option>
                </select>
              </div>
            </div>

          </div>

          <div class="control-group">
            <label class="control-label" for="chzn-muti-car-select">所属车辆</label>

            <div class="controls">
              <div class="chosen">
                <select data-placeholder="请选择所属车辆..." class="chzn-select" multiple
                        id="chzn-muti-car-select" name="car_id" tabindex="40" disabled="true">
                  <option value=""></option>
                      <option value="<%= @supervise.car.id %>"
                             selected="selected"
                          ><%= @supervise.car.model_plate %>
                      </option>
                </select>
              </div>
            </div>

          </div>

          <div class="control-group">
            <label class="control-label" for="start">启用时间</label>

            <div class="controls controls-row">
              <input class="span4" type="text" id="start" name="supervise[start]" value="<%= @supervise.start %>" style="cursor:pointer;">
              <i class="icon-calendar span1"></i>
            </div>

          </div>

          <div class="control-group">
            <label class="control-label" for="current_mileage">当前里程</label>

            <div class="controls controls-row">
              <input class="span4" type="text" id="current_mileage" name="supervise[current_mileage]" value="<%= @supervise.current_mileage %>">
            </div>

          </div>

          <div class="control-group">
            <label class="control-label" for="current_life">已用时长</label>

            <div class="controls controls-row">
              <input class="span4" type="text" id="current_life" name="supervise[current_life]" value="<%= @supervise.current_life %>">
            </div>

          </div>

          <div class="control-group">
            <label class="control-label" for="chzn-active-select">状态</label>

            <div class="controls">
              <div class="chosen">
                <select data-placeholder="请选择状态..." class="chzn-select"
                        id="chzn-active-select" name="supervise[is_active]" value="<%= @supervise.is_active %>" tabindex="40">
                  <option value=""></option>
                      <option value="启用" 
                        <% if @supervise.is_active == "启用" %>
                           selected="selected"
                        <% end %>>启用</option>
                      <option value="暂停"
                        <% if @supervise.is_active == "暂停" %>
                           selected="selected"
                        <% end %>>暂停</option>
                      <option value="终止"
                        <% if @supervise.is_active == "终止" %>
                           selected="selected"
                        <% end %>>终止</option>  
                </select>
              </div>
            </div>

          </div>


          <div class="control-group">
            <div class="controls">
              <button type="submit" class="btn">更新</button>
              <a href="/admins/supervises" class="btn cancle">取消</a>
            </div>
          </div>
      <% end %>
    </div>
  </div>

</div>

