<% provide(:title, '出差管理') %>

<div class="content span9">
  <h4>出差管理</h4>

  <div class="row">
    <div class="span9">
      <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="span9">
      <table id="trips" class="table table-hover table-striped table-bordered" cellpadding="0" cellspacing="0"
             border="0" data-source="<%= workers_trips_url(format: "json") %>">
        <thead>
        <tr class="alert alert-success">
          <th style="width: 68px">车牌</th>
          <th style="width: 45px">司机</th>
          <th style="width: 168px">出差人员</th>
          <th>出差地</th>
          <th>出发时间</th>
          <th>归来时间</th>
          <th>事由</th>
          <th>更改</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>

