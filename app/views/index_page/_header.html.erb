<div class="container">
  <div id="header" class="row">
    <div class="span12">
      <ul class="nav-right-top">

        <% if signed_in? %>
            <li><%= link_to current_user.name, user_root %><small>，您好！</small></li>
            <li class="active"><%= link_to "首页", root_path %></li>
            <li><%= link_to "设置", edit_user_path(current_user) %></li>
            <li><%= link_to "注销", signout_path, method: "delete" %></li>
        <% else %>
            <li class="active"><%= link_to "首页", root_path %></li>
            <li><a href="#myModal" data-toggle="modal">登录</a></li>
        <% end %>
      </ul>
    </div>
  </div>
  <!-- Modal -->
  <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      <h3 id="myModalLabel">车辆管理系统登录</h3>
    </div>
    <div class="modal-body">
      <form class="form-horizontal" action="/sessions" method="post">
        <div class="control-group">
          <label class="control-label" for="inputEmail">用户名</label>
          <div class="controls">
            <input type="text" id="inputName" name="name" placeholder="您的姓名">
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="inputPassword">密码</label>
          <div class="controls">
            <input type="password" id="inputPassword" name="password" placeholder="默认六个零">
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <button type="submit" class="btn" aria-hidden="true">登陆</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
          </div>
        </div>
      </form>
    </div>
    <div class="modal-footer">
    </div>
  </div>
</div>