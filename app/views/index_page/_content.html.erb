<div class="container">
  <div class="row">
    <div class="span12">
      <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <%= yield %>
    </div>
  </div>
</div>