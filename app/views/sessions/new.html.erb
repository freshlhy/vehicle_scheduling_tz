<% provide(:title, "登录") %>

<div class="row">
  <div id="login-form" class="span3 offset4">
    <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag "用户名" %>
        <%= text_field_tag :name %>
      </div>

      <div class="field">
        <%= label_tag "密码" %>
        <%= password_field_tag :password %>
      </div>

      <%= submit_tag "登录", class:"btn" %>

    <% end %>
    <p>忘记密码？请联系管理员。</p>
  </div>
</div>
